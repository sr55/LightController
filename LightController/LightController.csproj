<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <AssemblyName>LightController</AssemblyName>
    <RootNamespace>LightController</RootNamespace>
    <PackageId>LightController</PackageId>
    <Authors>SRae</Authors>
    <Product>LightController</Product>

    <Copyright>Copyright Â© 2020 SRae</Copyright>
    <Description>A small application for controlling XLED Lighting</Description>
    <PackageProjectUrl>https://github.com/sr55/LightController</PackageProjectUrl>
    <RepositoryUrl>https://github.com/sr55/LightController</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <Platforms>AnyCPU</Platforms>
    <PlatformTarget>AnyCPU</PlatformTarget>

    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LibVLCSharp" Version="3.4.9" />
    <PackageReference Include="NAudio" Version="2.0.0-beta1" />
    <PackageReference Include="VideoLAN.LibVLC.Windows" Version="3.0.11" />
  </ItemGroup>

  <ItemGroup>
    <None Update="carol.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
